<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E9F3E9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_header"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#E7EAE4"
            android:text="CART"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_cart"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFC107"
        android:text="Id"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#C8C7C3"
        android:text="Food Name"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittext_quantity"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#C6C5C2"
        android:text="quantity"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittext_delivery"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#BFBEBA"
        android:text="price"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_edit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="#FF2CC179"
            android:text="Edit"
            app:backgroundTint="#FF2CC179" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="#FFF30B38"
            android:text="Delete"
            app:backgroundTint="#FFF30B38" />


    </LinearLayout>




</LinearLayout>
